{
  "variables": {
    "ansible_environment": "{{ ansible_environment }}",
    "ansible_playbook": "{{ ansible_playbook }}"
  },
  "builders": [
    {
      "communicator": "ssh",
      "output_dir": "images/vbox/project/prod",
      "provider": "virtualbox",
      "source_path": "takelwerk/takelbase",
      "type": "vagrant"
    }
  ],
  "provisioners":
  [
    {
      "type": "ansible",
      "user": "vagrant",
      "playbook_file": "../ansible/{{ user `ansible_playbook` }}",
      "groups": [ "all", "private", "users", "image", "{{ user `ansible_environment` }}"],
      "ansible_env_vars" : [
        "ANSIBLE_HOST_KEY_CHECKING=False",
        "ANSIBLE_SSH_ARGS='-v -o ControlMaster=auto -o ControlPersist=15m'"
      ],
      "extra_arguments": [
        "-vvv"
      ]
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash -eux '{{.Path}}'",
      "scripts": [
        "templates/vbox/project/prod/bin/ssh.sh"
      ],
      "type": "shell"
    }
  ]
}
